extends ../layout

block content
  .container
    h1.main-title Company Update
    form(action=`/companys/${company._id}?_method=PUT`, method='POST')
      .form-group
        label(for='userid') Name
        input.form-control(type='text', id='name', name='name', placeholder='Company name', value=company.name)
      .form-group
        label(for='number') Number(빈 숫자를 입력해주세요)
        input.form-control(type='number', id='number', name='number', placeholder='number', value=company.number)
      a.btn.btn-outline-secondary(href='javascript:window.history.back();') Back 
      | 
      button.btn.btn-primary(type='submit') Update
