extends ../layout

block content
  .container
    .row
      .col-xs-6
        a.main-title(href='/statistics/login') 법인별
      .col-xs-6
        .btn-group
          button.btn.btn-default(type='button') 선택하세요
          button.btn.btn-default.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            span.caret
            span.sr-only Toggle Dropdown
          ul.dropdown-menu
            li
              a(href='#') 로그인 기록
            li
              a(href='/statistics/corporation') 법인별
            li
              a(href='/statistics') 구분별

    .row
      .col-lg-12
        .chart-container
          canvas#myChart       
  script.
   var ex_ilabelt="#{labeli}";
   var ex_ilabel=ex_ilabelt.replace(/&quot;/g, '"');
   var ctx = document.getElementById("myChart").getContext('2d');
   ctx.canvas.parentNode.style.width = '50%'
   var idata = JSON.parse("#{datai}")
   var ilabel = JSON.parse(ex_ilabel);
   var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
    labels: ilabel,
    datasets: [{
    label: '데이터 개수',
    data: idata,
    backgroundColor: [
    'rgba(255, 99, 132, 0.2)',
    'rgba(54, 162, 235, 0.2)',
    'rgba(255, 206, 86, 0.2)',
    'rgba(75, 192, 192, 0.2)',
    'rgba(153, 102, 255, 0.2)',
    'rgba(255, 159, 64, 0.2)',
    'rgba(51, 204, 51,0.2)',
    'rgb(191, 191, 63,0.2)',
    'rgb(63, 127, 191 ,0.2)',
    'rgb(63, 191, 191,0.2)',
    'rgb(191, 63, 127,0.2)',
    'rgb(46, 91, 68,0.2)'

    ],
    borderColor: [
    'rgba(255,99,132,1)',
    'rgba(54, 162, 235, 1)',
    'rgba(255, 206, 86, 1)',
    'rgba(75, 192, 192, 1)',
    'rgba(153, 102, 255, 1)',
    'rgba(255, 159, 64, 1)',
    'rgba(51, 204, 51,1)',
    'rgb(191, 191, 63,1)',
    'rgb(63, 127, 191,1)',
    'rgb(63, 191, 191,1)',
    'rgb(191, 63, 127,1)',
    'rgb(46, 91, 68,1)'
    ],
    borderWidth: 1
    }]
    },
    options: {
    scales: {
    yAxes: [{
    ticks: {
    beginAtZero:true
    }
    }]
    }
    }
    });  
        


        
