extends ../layout

block content
  .container
    h1.main-title Option Register
    form(action='/options', method='POST')
      .form-group
        label(for='name') Name
        input.form-control(type='text', id='name', name='name', placeholder='Option name')
      .form-group
        label(for='number') Number
        input.form-control(type='number', id='number', name='number', placeholder='number')
      | 
      button.btn.btn-primary(type='submit') Register 
